<%= form_with(model: tag, url: {controller: 'tags', action: 'add' }, remote: true, class: 'form', id: 'tag-add-form') do |f| %>

  <%= f.label :slug %>
  <%= f.text_field :slug, class: 'form' %>

  <%= f.label :label %>
  <%= f.text_field :label, class: 'form' %>

  <%= f.label :edit_permit, class: 'radio', value: 'self' do %>
    <%= f.radio_button :edit_permit, :self %>
    <span>作成者のみ編集可能</span>
  <% end %>

  <%= f.label :edit_permit, class: 'radio', value: 'any' do %>
    <%= f.radio_button :edit_permit, :any %>
    <span>誰でも編集可能</span>
  <% end %>

  <%= f.label :edit_permit, class: 'radio', value: 'selected' do %>
    <%= f.radio_button :edit_permit, :selected %>
    <span>編集者を限定する</span>
  <% end %>

  <%= f.submit nil, class: 'btn tag-add-btn' %>

<% end %>
