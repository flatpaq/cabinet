<div class="tag-select-heading row align-top">
  <h1 class="col">タグの選択</h1>

  <div class="tags-window-close-button col">
    <div class="row-nocol just-end">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
      <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
      </svg>
    </div>
  </div>

</div>


<div id="tag-select-area" class="row">
  <%= collection_check_boxes(:article, :tag_ids, Tag.all, :id, :slug, checked: article.tag_ids, include_hidden: false) do |t| %>

    <div class="col-lg-4">
      <div class="tag-select-checkbox">
        <%= t.label(class: 'checkbox') do %>
          <%= t.check_box %>
          <span class="tag-label"><%= t.object.label %></span>
          <span class="tag-slug"><%= t.text %></span>
        <% end %>
      </div>
    </div>

  <% end %>
</div>
